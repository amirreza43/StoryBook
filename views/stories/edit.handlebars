<h1>Edit Stories</h1>
<div class="row">
    <form action="/stories/{{story.id}}?_method=PUT" method="POST" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" name="title" value="{{story.title}}">
                <label for="title">Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <select type="text" name="status">
                    {{#selected story.status}}
                    <option value="public" selected>public</option>
                    <option value="private">private</option>
                    <option value="unpublished">unpublished</option>
                    {{/selected}}
                </select>
                <label for="title">Status</label>
            </div>
        </div>
         <div class="row">
           <p>
               <input type="checkbox" name="allowComment" class="filled-in" id="filled-in-box" {{#if story.allowComment}} checked="checked"{{/if}}>
               <label for="filled-in-box">Allow Comments</label>
           </p>
        </div>
        <div class="row">
            <div class="input-field">
                <h5>Tell us your story:</h5>
                <textarea name="body">{{story.body}}</textarea>
            </div>
        </div>

        <input type="submit" value="save" class="btn">
    </form>
</div>